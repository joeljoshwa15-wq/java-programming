import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
       Scanner JD =new Scanner(System.in);
        int a=JD.nextInt();
        int b =JD.nextInt();
        char sum=JD.next().charAt(0);
        switch (sum){
            case'+':
                System.out.print("Addition of two number is "+ (double)(a+b));
                break;
            case '-':
                System.out.print("Subtraction of two number is "+ (double)(a-b));
                break;
            case'*':
                System.out.print("Multiplication of two number is "+ (double)(a*b));
                break;
            case'/':
                System.out.print("divition of two number is "+ (double)(a/b));
                break;
            case'%':
                                 System.out.print("Module of two numbers is"+ (double)(a%b));
                                                  break;
                                                  default:System.out.print("Invalid Input");
                                                  
                                  
                                  
                                 
                                  
                                 
        }         
                
                
        
    }
}
